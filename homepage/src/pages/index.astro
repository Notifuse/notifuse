---
import "../styles/global.css"
import emailBuilderImage from "../assets/screenshots/email_builder.png"
import IntegrationMarquee from "../components/IntegrationMarquee.astro"
import Navigation from "../components/Navigation.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Notifuse - Open-Source Newsletter & Notification Platform</title>
    <meta
      name="description"
      content="The creative platform for cross-functional newsletter and notification workflows. Open-source, powerful, and built for teams."
    />
  </head>
  <body class="bg-white">
    <div class="container relative">
      <!-- Vertical lines on sides -->
      <div
        class="absolute left-0 top-0 bottom-0 w-px bg-gray-200 hidden lg:block"
      >
      </div>
      <div
        class="absolute right-0 top-0 bottom-0 w-px bg-gray-200 hidden lg:block"
      >
      </div>

      <!-- Navigation -->
      <Navigation />

      <!-- Hero Section -->
      <section class="bg-white">
        <div class="px-4 lg:px-8 py-20">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Content -->
            <div class="text-center lg:text-left">
              <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-6">
                The open-source <span class="italic text-primary"
                  >alternative</span
                > to:<br />
                <span class="text-md lg:text-lg text-gray-600 font-normal"
                  >Mailchimp, Brevo, Mailjet, Listmonk, Mailerlite, Klaviyo...</span
                >
              </h1>
              <p class="text-lg text-black mb-10 max-w-3xl lg:max-w-none">
                Notifuse is a modern newsletter and notification platform that
                allows you to send newsletters and transactional emails at a
                fraction of the cost.
              </p>
              <div
                class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start"
              >
                <a
                  href="#"
                  class="bg-primary text-white px-4 py-2 rounded-md text-base font-semibold hover:bg-primary/80 transition-colors"
                >
                  Live Demo
                </a>
                <a
                  href="#"
                  class="border border-gray-200 text-gray-700 px-4 py-2 rounded-md text-base font-semibold hover:bg-gray-50 transition-colors"
                >
                  One-click Deploy
                </a>
              </div>
            </div>

            <!-- App Preview -->
            <div
              class="relative max-w-md mx-auto lg:max-w-md lg:ml-auto lg:mr-0"
            >
              <div class="relative">
                <img
                  src={emailBuilderImage.src}
                  alt="Notifuse Dashboard Preview"
                  class="w-full rounded-xl shadow-xl shadow-primary/25 border border-gray-200"
                />
              </div>
            </div>
          </div>

          <!-- Integration Logos - Streaming -->
          <IntegrationMarquee />
        </div>
      </section>

      <!-- Features Bento Grid -->
      <section class="bg-white border-t border-gray-200" id="features">
        <div class="py-20">
          <div class="px-4 lg:px-8 text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
              Everything you need to succeed
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Powerful features designed to help you create, send, and track
              your newsletters with ease.
            </p>
          </div>

          <!-- Bento Grid -->
          <div
            class="grid grid-cols-1 md:grid-cols-3 border-t border-gray-200 overflow-hidden"
          >
            <!-- Row 1: 2 Big Blocks -->
            <!-- Visual Email Builder -->
            <div
              class="md:col-span-2 bg-white p-8 border-r border-b border-gray-200 hover:bg-gray-50 transition-colors"
            >
              <div class="flex items-center gap-3 mb-6">
                <div
                  class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900">
                  Visual Email Builder
                </h3>
              </div>
              <p class="text-gray-600 mb-6">
                Create stunning emails with our intuitive drag-and-drop editor.
                Build responsive layouts with MJML components and real-time
                preview.
              </p>
              <div
                class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-4 h-32 flex items-center justify-center"
              >
                <div class="grid grid-cols-3 gap-2 w-full max-w-24">
                  <div class="h-3 bg-blue-500 rounded"></div>
                  <div class="h-3 bg-purple-500 rounded"></div>
                  <div class="h-3 bg-blue-400 rounded"></div>
                  <div class="h-2 bg-gray-300 rounded col-span-2"></div>
                  <div class="h-2 bg-gray-200 rounded"></div>
                  <div class="h-4 bg-purple-400 rounded col-span-3"></div>
                </div>
              </div>
            </div>

            <!-- S3 File Manager -->
            <div
              class="md:col-span-1 bg-white p-6 border-b border-gray-200 hover:bg-gray-50 transition-colors"
            >
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-5 h-5 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"
                    ></path>
