                      d="M15 17h5l-5 5v-5zM4 19h6v-6H4v6zM16 3h5v5h-5V3zM4 3h6v6H4V3z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900">
                  Notification Center
                </h3>
              </div>
              <p class="text-gray-600 text-sm">
                Centralized notification system for managing alerts, updates,
                and system events.
              </p>
            </div>

            <!-- Transactional API & MJML -->
            <div
              class="md:col-span-2 bg-white p-6 border-b border-gray-200 hover:bg-gray-50 transition-colors"
            >
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                  <div
                    class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center"
                  >
                    <svg
                      class="w-5 h-5 text-red-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    Transactional API
                  </h3>
                </div>
              </div>
              <p class="text-gray-600 text-sm">
                Powerful REST API for transactional emails with responsive
                templates for perfect rendering across all devices.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Pricing Section -->
      <section class="bg-white border-t border-gray-200" id="pricing">
        <div class="px-4 lg:px-8 py-20">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
              Start your journey today
            </h2>
            <p class="text-xl text-gray-600">
              Start creating powerful newsletters for free.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- Free Plan -->
            <div
              class="bg-white border border-gray-200 rounded-lg p-8 hover:border-gray-200 transition-colors"
            >
              <div class="text-center mb-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  Forever Free
                </h3>
                <p class="text-gray-600">Open-source self-hosted solution.</p>
              </div>
              <ul class="space-y-4 mb-8">
                <li class="flex items-center">
                  <svg
                    class="w-5 h-5 text-green-500 mr-3"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
