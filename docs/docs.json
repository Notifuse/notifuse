{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Notifuse Documentation",
  "colors": {
    "primary": "#7763F1",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/assets/logo/icon.png",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "installation"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/workspaces",
              "concepts/contacts",
              "concepts/lists",
              "concepts/templates",
              "concepts/broadcast-campaigns",
              "concepts/transactional-api",
              "concepts/notification-center"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/sendgrid",
              "integrations/mailgun",
              "integrations/amazon-ses",
              "integrations/postmark"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "https://raw.githubusercontent.com/Notifuse/notifuse/refs/heads/main/openapi.json",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction", "api-reference/authentication"]
          },
          {
            "group": "Transactional Notifications",
            "pages": [
              "api-reference/endpoint/send-transactional",
              "api-reference/transactional-examples"
            ]
          }
        ]
      }
    ]
  },
  "logo": "/assets/logo/logo-small.png",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@notifuse.com"
      },
      {
        "label": "GitHub",
        "href": "https://github.com/notifuse"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Live Demo",
      "href": "https://demo.notifuse.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/notifuse",
      "github": "https://github.com/notifuse",
      "discord": "https://discord.gg/notifuse"
    }
  }
}
