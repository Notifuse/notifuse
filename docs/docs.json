{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Notifuse Documentation",
  "colors": {
    "primary": "#7763F1",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/assets/logo/icon.png",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "api-reference/openapi.json",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Transactional API",
            "pages": ["api-reference/endpoint/send-transactional"]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": "/assets/logo/logo-small.png",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@notifuse.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Home",
      "href": "https://www.notifuse.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/notifuse",
      "github": "https://github.com/notifuse"
    }
  }
}
